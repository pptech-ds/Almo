{% extends 'base.html.twig' %}

{% block title %}Les Articles{% endblock %}

{% block body %}
    <div style="height: 30rem; background-color: rgba(255,0,0,0.1);">
    </div>

    <!-- ======= Services Section ======= -->
    <section id="services" class="services">
        <div class="container">

            <div class="section-title">
                <h2>Les articles</h2>
                <p>Tout les articles</p>
            </div>

            <div class="row">
                {% for article in articles %}
                    <div class="col-lg-4 col-md-6" style="height: 35rem;">
                        <div class="icon-box">
                            {# <div class="icon"><i class="fas fa-heartbeat"></i></div> #}
                            <h4><a href="">{{article.title}}</a></h4>
                            <img src={{ article.image }} alt="" style="width: 100%">
                            {# <p>{{article.content | u.truncate(150, '...') | raw}}</p> #}
                            
                        </div>
                        <p class="fs-6">Ecrit par {{article.user.email}} {{article.createdAt | ago}}</p>
                    </div>
                {% endfor %}

            </div>

            {{knp_pagination_render(articles)}}
        </div>
    </section><!-- End Services Section -->

{% endblock %}
