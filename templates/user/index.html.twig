{% extends 'base.html.twig' %}

{% block title %}Profile utilisateur{% endblock %}

{% block body %}

    {# <div style="height: 30rem; background-color: rgba(255,0,0,0.1);">
    </div> #}

    <div style="height: 10rem">
    </div>

    <!-- ======= Services Section ======= -->
    <section id="services" class="services">
        <div class="container">

            <div class="section-title">
                <h2>Profil utilisateur</h2>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th hidden>Field</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th hidden>Field</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        
                        <tr>
                            <td>Nom : {{ (user.lastname is defined) ? user.lastname : '' }}</td>
                        </tr>
                        <tr>
                            <td>Prenom : {{ (user.firstname is defined) ? user.firstname : '' }}</td>
                        </tr>
                        <tr>
                            <td>Email : {{ (user.email is defined) ? user.email : '' }}</td>
                        </tr>
                        <tr>
                            <td>Adresse : {{ (user.address is defined) ? user.address : '' }}</td>
                        </tr>
                        <tr>
                            <td>Code Postal : {{ (user.zipcode is defined) ? user.zipcode : '' }}</td>
                        </tr>
                        <tr>
                            <td>Ville : {{ (user.city is defined) ? user.city : '' }}</td>
                        </tr>
                        <tr>
                            <td>Téléphone : {{ (user.phone is defined) ? user.phone : '' }}</td>
                        </tr>
                        <tr>
                            <td>Hopital : {{ (user.hospital[0] is defined) ? user.hospital[0] : '' }}</td>
                        </tr>
                        <tr>
                            <td>Medecin Traitant : {{ (user.doctor[0] is defined) ? user.doctor[0] : '' }}</td>
                        </tr>
                        <tr>
                            <td>
                                <a href="{{ path('user_update', {id: user.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                            </td>
                        </tr>
                            
                        
                        
                    </tbody>
                </table>
            </div>

        </div>

        

    </section><!-- End Services Section -->




{% endblock %}


{% block javascripts %}
{% endblock %}