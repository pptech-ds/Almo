{% extends 'base.html.twig' %}

{% block title %}{{document.title}}{% endblock %}

{% block body %}
    <div class="container">
    
        <div style="height: 10rem">
        </div>

        <!-- ======= Breadcrumbs Section ======= -->
        <section class="breadcrumbs">

            <div class="d-flex justify-content-between align-items-center">
                <h2 class="fw-bold">{{document.title}}</h2>
                <ol>
                    <li><a href="{{path('document_index')}}">Retour Ã  la liste des documents</a></li>
                    <li>{{document.title}}</li>
                </ol>
            </div>

        
        </section><!-- End Breadcrumbs Section -->

        <section class="inner-page">
            <p style="height: 100%; background-color: rgba(255,0,0,0.1);">{{document.content | raw}} </p>
            <p class="fs-6">Ecrit par {{document.user.email}} {{document.createdAt | ago}}</p>
        </section>
    </div>
{% endblock %}
