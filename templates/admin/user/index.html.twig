{% extends 'admin/sbadmin2.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Liste des categories</h1>
        <p class="mb-4">Ajout ou Suppression de categorie de ressources</p>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Liste des categories</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Email</th>
                                <th>Roles</th>
                                <th>Validé</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th hidden>Id</th>
                                <th hidden>Email</th>
                                <th hidden>Roles</th>
                                <th hidden>Validé</th>
                                <th hidden>Actions</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            
                            {% for user in users %}
                                <tr>
                                    <td>{{user.id}}</td>
                                    <td>{{user.email}}</td>
                                    <td>{{user.roles[0]}}</td>
                                    <td>{{user.isVerified}}</td>
                                    <td><a href="{{ path('admin_user_index', {id: user.id}) }}" class="btn btn-primary btn-sm">Modifier</a></td>
                                </tr>
                            {% endfor %}
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->


{% endblock %}