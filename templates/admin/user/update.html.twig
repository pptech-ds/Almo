{% extends 'admin/sbadmin2.html.twig' %}

{% block title %}Ajout d'un utilisateur{% endblock %}

{% block body %}
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Ajouter un utilisateur</h1>
        <p class="mb-4">Ajout d'un utilisateur</p>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Ajouter un utilisateur</h6>
            </div>
                {% for flashError in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                {% endfor %}

                <h1>Ajouter</h1>

                {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}
                    {{ form_row(registrationForm.agreeTerms, {
                        label: 'Accepter les conditions'
                    }) }}

                    <button type="submit" class="btn btn-lg btn-primary my-3">Enregistrer</button>
                {{ form_end(registrationForm) }}
        </div>

    </div>
    <!-- /.container-fluid -->
{% endblock %}