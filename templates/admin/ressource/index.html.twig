{% extends 'admin/sbadmin2.html.twig' %}

{% block title %}Ajout d'une cat√©gorie{% endblock %}

{% block body %}

<!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Liste des ressources</h1>
        <p class="mb-4">Ajout ou Suppression de ressources</p>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Liste des ressources</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Titre</th>
                                <th>Categorie</th>
                                <th>Auteur</th>
                                <th>Date</th>
                                <th>Active</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th hidden>Id</th>
                                <th hidden>Titre</th>
                                <th hidden>Categorie</th>
                                <th hidden>Auteur</th>
                                <th hidden>Date</th>
                                <th hidden>Active</th>
                                <th hidden>Actions</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            
                            {% for ressource in ressources %}
                                <tr>
                                    <td>{{ressource.id}}</td>
                                    <td>{{ressource.title}}</td>
                                    <td>{{ressource.ressourceCategory}}</td>
                                    <td>{{ressource.user.email}}</td>
                                    <td>{{ressource.createdAt | date}}</td>
                                    <td>{{ressource.active}}</td>
                                    
                                    <td><a href="{{ path('admin_ressource_index', {id: ressource.id}) }}" class="btn btn-primary btn-sm">Modifier</a></td>
                                </tr>
                            {% endfor %}
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->

{% endblock %}